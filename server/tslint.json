{
  "extends": "@magicspace/configs/tslint-prettier",
  "rules": {
    "explicit-return-type": false,
    "no-implicit-dependencies": [
      true,
      [
        "shared",
        "app.module",
        "controllers",
        "common",
        "core",
        "utils",
        "lang",
        "paths",
        "fs-extra",
        "class-transformer",
        "prettier"
      ]
    ],
    "import-path-base-url": [true, {"baseUrl": "src"}]
  }
}
